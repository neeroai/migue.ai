# WhatsApp Business API Configuration
# Get these from Meta Business Manager > WhatsApp > API Setup
WHATSAPP_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_ID=your_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_here
WHATSAPP_APP_SECRET=your_whatsapp_app_secret_here

# Supabase Configuration
# Get these from Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co

# ⚠️ CRITICAL: Use SERVICE ROLE key (not anon key) for backend operations
# The service_role key bypasses Row Level Security (RLS) policies
# Find it at: Supabase Dashboard > Settings > API > service_role (secret)
# NEVER expose this key in client-side code
SUPABASE_KEY=your_supabase_SERVICE_ROLE_key_here

# Anon key (public) - only needed for future client-side SDK integration
# Currently unused - backend uses service_role key above
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Access token for Supabase Management API (optional)
# Only needed for programmatic project management
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here

# AI Provider API Keys
# Google Gemini (Primary - FREE tier, 1,500 req/day)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# OpenAI (Fallback chat + Audio transcription)
OPENAI_API_KEY=sk-proj-your_openai_key_here

# Anthropic Claude (Emergency fallback)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# WhatsApp Flows Configuration (Optional)
# Only needed if using WhatsApp Flows with data_exchange encryption
# Get FLOW_PRIVATE_KEY from Meta Business Manager > WhatsApp Flows > Settings
# FLOW_PRIVATE_KEY=your_flow_private_key_here

# Flow IDs from Meta Business Manager
# Create flows in Meta Business Manager and paste their IDs here
# See docs/WHATSAPP_FLOWS_SETUP.md for setup instructions
# FLOW_ID_LEAD_GENERATION=your_lead_generation_flow_id
# FLOW_ID_APPOINTMENT_BOOKING=your_appointment_booking_flow_id
# FLOW_ID_FEEDBACK=your_feedback_flow_id

# Optional Application Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Cron Job Authentication (optional fallback)
CRON_SECRET=your_cron_secret_here
