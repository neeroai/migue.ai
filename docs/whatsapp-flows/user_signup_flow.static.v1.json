{
  "version": "7.1",
  "routing_model": {
    "BASIC_INFO": [
      "SUCCESS"
    ],
    "SUCCESS": []
  },
  "screens": [
    {
      "id": "BASIC_INFO",
      "title": "Registro básico",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "signup_form",
            "children": [
              {
                "type": "TextHeading",
                "text": "Completa tu registro"
              },
              {
                "type": "TextInput",
                "name": "name",
                "label": "Nombre completo",
                "required": true,
                "input-type": "text"
              },
              {
                "type": "TextInput",
                "name": "email",
                "label": "Correo electrónico",
                "required": true,
                "input-type": "email"
              },
              {
                "type": "Footer",
                "label": "Enviar",
                "on-click-action": {
                  "name": "complete",
                  "payload": {
                    "name": "${form.name}",
                    "email": "${form.email}"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "SUCCESS",
      "title": "Listo",
      "terminal": true,
      "success": true,
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "success_form",
            "children": [
              {
                "type": "TextBody",
                "text": "Registro enviado correctamente."
              },
              {
                "type": "Footer",
                "label": "Cerrar",
                "on-click-action": {
                  "name": "complete",
                  "payload": {}
                }
              }
            ]
          }
        ]
      }
    }
  ]
}

