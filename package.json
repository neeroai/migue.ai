{
  "name": "migue.ai",
  "version": "1.0.0",
  "description": "> Un asistente personal de inteligencia artificial que opera a través de WhatsApp Business API, proporcionando funcionalidades avanzadas de productividad, gestión de citas, análisis de contenido y automatización de tareas diarias.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:gemini": "TEST_TYPE=integration jest tests/gemini",
    "test:gemini:watch": "TEST_TYPE=integration jest tests/gemini --watch",
    "test:gemini:load": "npx tsx scripts/load-test-gemini.ts",
    "test:gemini:load:quick": "npx tsx scripts/load-test-gemini.ts --quick",
    "test:integration": "TEST_TYPE=integration jest",
    "test:all": "npm run test:unit && npm run test:gemini",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "next dev",
    "dev:vercel": "vercel dev",
    "build": "next build",
    "build:api": "tsc -p tsconfig.json",
    "start": "next start",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist .vercel coverage test-results out .next",
    "setup": "npm install && npm run typecheck",
    "postinstall": "playwright install",
    "pre-deploy": "npm run typecheck && npm run build && npm run test:unit",
    "verify-deploy": "node scripts/verify-deploy.js",
    "prepare": "husky",
    "db:verify": "npx tsx scripts/verify-supabase.ts",
    "db:cli": "./scripts/supabase-cli.sh",
    "audit:users": "npx tsx scripts/audit-users.ts",
    "diagnose:cron": "npx tsx scripts/diagnose-cron-jobs.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@edge-runtime/jest-environment": "^4.0.0",
    "@edge-runtime/jest-expect": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "19.1.15",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "playwright": "^1.55.1",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "vercel": "^48.1.6"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.15",
    "@ai-sdk/openai": "^3.0.12",
    "@anthropic-ai/sdk": "^0.65.0",
    "@supabase/supabase-js": "^2.58.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@vercel/functions": "^3.1.1",
    "ai": "^6.0.42",
    "lucide-react": "^0.544.0",
    "next": "^16.0.10",
    "openai": "^5.23.1",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.13",
    "tesseract.js": "^6.0.1",
    "zod": "^3.25.8"
  }
}
