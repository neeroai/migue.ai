{
  "name": "migue.ai",
  "version": "1.0.0",
  "description": "> Un asistente personal de inteligencia artificial que opera a través de WhatsApp Business API, proporcionando funcionalidades avanzadas de productividad, gestión de citas, análisis de contenido y automatización de tareas diarias.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "vercel dev",
    "build": "tsc -p tsconfig.json",
    "start": "vercel dev",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist .vercel coverage test-results",
    "setup": "npm install && npm run typecheck",
    "postinstall": "playwright install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.2.0",
    "playwright": "^1.55.1",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "vercel": "^48.1.6"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "openai": "^5.23.1",
    "zod": "^3.25.8"
  }
}
