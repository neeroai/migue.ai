{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "crons": [
    { "path": "/api/cron/check-reminders", "schedule": "0 9 * * *" },
    { "path": "/api/cron/follow-ups", "schedule": "0 */6 * * *" }
  ],
  "headers": [
    {
      "source": "/api/whatsapp/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ]
}


