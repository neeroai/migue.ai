{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "next build",
  "crons": [
    {
      "path": "/api/cron/check-reminders",
      "schedule": "0 12 * * *",
      "comment": "12pm UTC = 7am Bogot치 (Colombia timezone)"
    },
    {
      "path": "/api/cron/follow-ups",
      "schedule": "0 12,18 * * *",
      "comment": "12pm UTC = 7am Bogot치, 6pm UTC = 1pm Bogot치"
    },
    {
      "path": "/api/cron/maintain-windows",
      "schedule": "0 12,15,18,21 * * *",
      "comment": "12pm UTC = 7am, 3pm UTC = 10am, 6pm UTC = 1pm, 9pm UTC = 4pm Bogot치"
    }
  ],
  "headers": [
    {
      "source": "/api/whatsapp/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    },
    {
      "source": "/api/health",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}


